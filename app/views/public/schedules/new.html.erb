<div class="header-bgc">
  <%= render 'layouts/header' %>
</div>
<div class="container" id="mainfield">
  <div class="row justify-content-center my-4">
    <div class="card col-md-6 col-11">
    <%= form_with model: @schedule, url: schedules_path, method: :post, local: true do |f| %>
      
      <div class="form-field my-3">
        <%= f.label :start_time %></br>
        <%= f.datetime_select :start_time, {}, {class: 'form-control bootstrap-date'} %>
      </div>
      <div class="form-field my-3">
        <%= f.label :finish_time %></br>
        <%= f.datetime_select :finish_time, {}, {class: 'form-control bootstrap-date'} %>
      </div>
      <div class="form-field my-3">
        <%= f.label :title %></br>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="form-field my-3">
        <%= f.label :content %></br>
        <%= f.text_area :content, class:"form-control" %>
      </div>
      <div class="submit my-3 text-center">
        <%= f.submit "投稿する", class:"btn btn-success" %>
      </div>
      
    <% end %>
    </div>
  </div>
</div>

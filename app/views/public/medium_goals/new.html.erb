<div class="header-bgc">
  <%= render 'layouts/header' %>
</div>
<div class="container" id="mainfield">
  <div class="row justify-content-center my-4">
    <div class="card col-6">
    <%= render 'layouts/errors', obj: @medium_goal %>
    <%= form_with model: @medium_goal, url: medium_goals_path, method: :post, local: true do |f| %>
      
      <div class="form-field my-3">
        <%= f.label :目標 %></br>
        <%= f.text_field :medium_goal_content, class:"form-control" %>
      </div>
      <div class="form-field my-3">
        <%= f.label :いつまで %></br>
        <%= f.text_field :medium_goal_when, class:"form-control" %>
      </div>
      <div class="form-field my-3">
        <%= f.label :設定した理由 %></br>
        <%= f.text_area :medium_goal_why, class:"form-control" %>
      </div>
      <div class="form-field my-3">
        <%= f.label :具体的なアクション %></br>
        <%= f.text_area :medium_goal_action, class:"form-control" %>
      </div>
      <div class="submit my-3 text-center">
        <%= f.submit "投稿する", class:"btn btn-success" %>
      </div>
      
    <% end %>
    </div>
  </div>
</div>

<div class="header-bgc">
  <%= render 'layouts/header' %>
</div>
<div class="container">
  <div class="row justify-content-center my-4">
    <div class="card col-6">
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
      
      <div class="form-field my-3">
        <%= f.label :name %></br>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-field my-3">
        <%= f.label :email %></br>
        <%= f.text_field :email, class:"form-control" %>
      </div>
      <div class="submit my-3 text-center">
        <%= f.submit "更新する", class:"btn btn-success" %>
      </div>
      
    <% end %>
      <div class="my-3 text-center">
        <%= link_to "退会する", user_users_withdrawal_path(current_user.id), class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
